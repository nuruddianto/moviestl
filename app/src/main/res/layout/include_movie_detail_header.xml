<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/movie_detail_rating_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/rating_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/star"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/movie_detail_rating"
                style="@style/TextView.Detail.Title"
                android:gravity="center" />

            <TextView
                style="@style/TextView.Detail"
                android:gravity="center"
                android:text="Rating" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movie_detail_vote_count_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/vote_count_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_people_black_24px"
                android:tint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/movie_detail_vote_count"
                style="@style/TextView.Detail.Title"
                android:gravity="center" />

            <TextView
                style="@style/TextView.Detail"
                android:gravity="center"
                android:text="Total Vote" />

        </LinearLayout>

    </LinearLayout>

</merge>